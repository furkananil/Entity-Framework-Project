@model IEnumerable<KursKayit>

<h2>Kayit Listesi</h2>

<a asp-action="Create" class="btn btn-primary">Kayit Ekle</a>
<hr>
<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 150px;">@Html.DisplayNameFor(m => m.KayitId)</th>
            <th>@Html.DisplayNameFor(m => m.Ogrenci.OgrenciAd)</th>
            <th>@Html.DisplayNameFor(m => m.Kurs.Baslik)</th>
            <th style="width: 150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.KayitId)</td>
                <td>@Html.DisplayFor(m => item.Ogrenci.AdSoyad)</td>
                <td>@Html.DisplayFor(m => item.Kurs.Baslik)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.OgrenciId" class="btn btn-sm    btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>